    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>

    <% end %>
 </ul>
<% end %>



<%= form_with model: @book, url: '/books', method: :post do |f| %>
  
  <div class="Tou"><h4>Title</h4></div>
  
<%= f.text_field :title %>
	
  <div class="Tou"><h4>Body</h4></div>
  <%= f.text_area :body %>

	
  <div class="Tou"><%= f.submit 'Create Book' %></div>
<% end %>
